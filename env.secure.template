# Thakii Worker Service - Enhanced Security Configuration Template
# Copy this file to .env and fill in your actual credentials
# 
# SECURITY NOTES:
# - Keep this file secure and never commit it to version control
# - Use the most secure authentication method available for your environment
# - Regularly rotate credentials (recommended: every 90 days)
# - Monitor credential usage and access logs

# =============================================================================
# FIREBASE AUTHENTICATION (Choose ONE method)
# =============================================================================

# Method 1: Base64 Encoded Service Account (RECOMMENDED for CI/CD)
# - Most secure for automated deployments
# - No files on filesystem
# - Easy to rotate via environment variables
FIREBASE_SERVICE_ACCOUNT_B64=your_base64_encoded_service_account_json_here

# Method 2: Service Account File Path (for local development)
# - Ensure file has restrictive permissions (600)
# - Store in secure location outside project directory
# FIREBASE_SERVICE_ACCOUNT_KEY=/secure/path/to/firebase-service-account.json
# GOOGLE_APPLICATION_CREDENTIALS=/secure/path/to/firebase-service-account.json

# =============================================================================
# AWS S3 AUTHENTICATION
# =============================================================================

# AWS Credentials (for programmatic access)
AWS_ACCESS_KEY_ID=AKIA_your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_DEFAULT_REGION=us-east-2

# S3 Configuration
S3_BUCKET_NAME=thakii-video-storage-1753883631

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Credential Management
CREDENTIAL_ROTATION_DAYS=90
ENABLE_CREDENTIAL_MONITORING=true
CREDENTIAL_HEALTH_CHECK_INTERVAL=300

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_SECURITY_LOGGING=true
SECURITY_LOG_FILE=/var/log/thakii-worker-security.log

# Authentication Timeouts
FIREBASE_TIMEOUT_SECONDS=30
S3_TIMEOUT_SECONDS=60
AUTH_RETRY_ATTEMPTS=3

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================

# Polling Configuration
WORKER_POLL_INTERVAL=10
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT_SECONDS=300

# File Handling
TEMP_DIR=/tmp/thakii-worker
MAX_VIDEO_SIZE_MB=500
MAX_PDF_SIZE_MB=50

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================

# Feature Flags
DISABLE_FIREBASE=false
DISABLE_S3=false
DEBUG_MODE=false
SECURE_MODE=true

# Testing Configuration
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60
PERFORMANCE_MONITORING=true
