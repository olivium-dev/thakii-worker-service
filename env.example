# Thakii Worker Service Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/your/firebase-service-account.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/firebase-service-account.json

# AWS S3 Configuration  
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_DEFAULT_REGION=us-east-2
S3_BUCKET_NAME=thakii-video-storage-1753883631

# Worker Configuration
WORKER_POLL_INTERVAL=10
MAX_CONCURRENT_TASKS=3
TEMP_DIR=/tmp/thakii-worker

# PDF Generation Configuration
# Video Analysis Parameters
VIDEO_THRESHOLD=15
MIN_CHANGE=10000
MIN_SEGMENT_DURATION=2000
MAX_SEGMENTS=10

# Whisper AI Parameters
WHISPER_COMPRESSION_THRESHOLD=2.4
WHISPER_LOGPROB_THRESHOLD=-1.0
WHISPER_NO_SPEECH_THRESHOLD=0.6

# PDF Layout Parameters
PDF_FONT_SIZE=12
PDF_FONT_NAME=DejaVuSansCondensed

# Subtitle Generation Parameters
MAX_SUBTITLE_SEGMENTS=8
MIN_SUBTITLE_DURATION=8000

# Development/Testing Configuration
DISABLE_FIREBASE=false
DISABLE_S3=false
DEBUG_MODE=false

# Optional: Override default paths
# FONTS_PATH=./fonts
# TEST_VIDEO_PATH=./test.mp4
